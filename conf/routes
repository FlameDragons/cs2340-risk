# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.LobbyController.index

# Lobby page
GET     /lobby                      controllers.LobbyController.redirectIndex
POST    /lobby/make                 controllers.LobbyController.make
GET     /lobby/host/:id             controllers.LobbyController.host(id: String)
GET     /lobby/getid                controllers.LobbyController.getId
GET     /lobby/:id                  controllers.LobbyController.lobby(id: String)
POST    /lobby/join                 controllers.LobbyController.join(name: String, color: Int)
POST    /lobby/ping                 controllers.LobbyController.ping(pid: String)
POST    /lobby/start                controllers.LobbyController.start(pid: String)

# Game page
GET     /game                       controllers.GameController.load
GET     /game/data                  controllers.GameController.getData

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
